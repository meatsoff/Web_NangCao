@model IEnumerable<DoUongOnline.Models.SanPham>

<style>
    a.xemchitiet {
        color: black;
        text-decoration: none;
    }

    .title_card:hover {
        color: #fb8d17;
    }

    .col-lg-3 {
        padding-bottom: 10px;
    }

    .card-pro {
        box-shadow: 0 4px 8px 0 rgb(228 228 228), 0 6px 20px 0 rgb(228 228 228);
        border-radius: 5px;
    }

    .content_card {
        padding: 10px 10px 5px 10px;
    }

    .image_card {
        border-radius: 5px;
    }

    .title_card {
        font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans","Liberation Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
        font-weight: 600;
        height: 50px;
        line-height: 1.5;
        -webkit-box-orient: vertical;
        overflow: hidden;
        line-height: var(--space-24);
        display: -webkit-box;
        -webkit-line-clamp: 2;
    }
    .vl {
        border-left: 6px solid green;
        height: 500px;
    }
</style>

@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding:50px;margin-bottom:15px">
    <div class="row" style="margin-bottom:15px">
        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12" style="margin-top: 50px; border-right: 3px solid #fb8d17; padding-left: 100px">
            <ul style="list-style:none">
                @using (Html.BeginForm("Menu", "Product", FormMethod.Get))
                {
                    <li><input style="border:none; background:none; height: 50px; width: 100px; text-align: right" type="submit" value="Tất cả" name="type" /> </li>
                    <li><input style="border:none; background:none; height: 50px; width: 100px; text-align: right" type="submit" value="Cà phê" name="type" /></li>
                    <li><input style="border:none; background:none; height: 50px; width: 100px; text-align: right" type="submit" value="Trà" name="type" /></li>
                    <li><input style="border:none; background:none; height: 50px; width: 100px; text-align: right" type="submit" value="Đá xay" name="type" /></li>
                    <li><input style="border:none; background:none; height: 50px; width: 100px; text-align: right" type="submit" value="Đóng gói" name="type" /></li>
                }
            </ul>
        </div>

        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
            <div class="row" style="display: flex; margin: 20px 0">
                <div class=" col-md-2">
                    <h3 style="color: #fb8d17;">
                        @Session["type"]
                    </h3>
                </div>
                <div style="padding-top: 10px; margin-left: 300px;">
                    @using (Html.BeginForm("Menu", "Product", FormMethod.Get))
                    {
                        @Html.TextBox("search") <input type="submit" value="Tìm kiếm" />
                    }
                </div>
            </div>

